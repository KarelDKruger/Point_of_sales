@model PointOfSales.ViewModels.CustomiseLaptopViewModel
@{
    ViewData["Title"] = "Customise";
}

@using (Html.BeginForm("SaveItemToCart", "Order", FormMethod.Post))
{
    <div>
        <label>HDD: </label>
        @Html.DropDownListFor(m => m.HddSelectedItem, Model.HddItems, "Please select a Hard Drive", new{})
    </div>
    <div>
        <label>Ram: </label>
        @Html.DropDownListFor(m => m.RamSelectedItem, Model.RamItems, "Please select a Ram", new { })
    </div>
    <div>
        <label>Colour: </label>
        @Html.DropDownListFor(m => m.ColorSelectedSelection, Model.ColorSelections,
            "Please select a Colour", new { })
    </div>

    <label class="Total"></label>
    <button>Add To Cart</button>
}
